<%- include('../includes/head.ejs') %>
</head>
<body>
  <%- include('../includes/nav.ejs') %>

  <main>
    <% if (prods.length > 0) { %>
      <div class="grid">
          <% prods.forEach(prod => { %>
          <article class="card product-item">
              <header class="card__header">
                  <h1 class="product__title"><%= prod.productData.title %></h1>           <!-- prod refers to parameter used in .forEach(____ => -->
              </header>
              <div class="card__image">
                  <img src="<%= prod.productData.imageUrl %>" alt="<%= prod.title %>">
              </div>
              <div class="card__content">
                  <h2 class="product__price">$ <%= prod.productData.price %></h2>
                  <p class="product__description">Quantity: <%= prod.qty %></p>
              </div>
              <form action="/cart-delete-item" method="POST">
                    <input type="hidden" value="<%= prod.productData.id %>" name="productId">
                    <button class="btn" type="submit">DELETE</button>
                </form>
          </article>
          <% }); %>
      </div>
      <% } else { %>
          <h1>No Products Found!</h1>
      <% } %>
  </main>
  <%- include('../includes/end.ejs') %>